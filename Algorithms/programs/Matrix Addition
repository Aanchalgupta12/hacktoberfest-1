/* *********************PROGREM OF MATRIX ADDITION******************************/
/* *********************Author : Bhavya Jindal**********************************/

/* ****************************************************************************/
#include<stdio.h>
void addition(int A[3][3] ,int B[3][3],int m)
{
    int i,j;
    int C[3][3];

    for(i=0;i<m;i++)
    {
        for(j=0;j<m;j++)
        {
            C[i][j]=A[i][j]+B[i][j];
        }
    }
    for(i=0;i<m;i++)
    {
        for(j=0;j<m;j++)
        {
            printf("%d% ",C[i][j]);

        }
        printf("\n");
    }
}
/* ****************************************************************************/
int main()
{

    int A[3][3]={1,2,3,1,2,3,1,2,3};
    int B[3][3]={1,2,3,1,2,3,1,2,3};
    int m=3;
    addition(A,B,3);
    return 0;
}
/* ****************************************************************************/
/* ****************************************************************************
ALGORITHM Matrix_Addition(a[][],b[][],m)
BEGIN:
        FOR i=0 To m-1 DO
            FOR j=0 TO m-1 DO
                c[i][j]=a[i][j]+b[i][j]
        RETURN c[i][j]
END;
* ****************************************************************************/
/* ****************************************************************************
output:
2 4 6
2 4 6
2 4 6
******************************************************************************/
